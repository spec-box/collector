{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
